{
  "name": "@foxleigh81/harbourmaster",
  "version": "0.1.0",
  "type": "module",
  "bin": {
    "harbourmasterd": "./bin/cli.js"
  },
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc && chmod +x dist/bin/cli.js",
    "build:ui": "cd ../ui && npm run build && mkdir -p ../daemon/dist/ui/dist && cp -r dist/* ../daemon/dist/ui/dist/",
    "build:all": "npm run build && npm run build:ui",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "prepublishOnly": "npm run build:all"
  },
  "dependencies": {
    "@fastify/cors": "^9.0.1",
    "@fastify/helmet": "^11.1.1",
    "@fastify/rate-limit": "^9.1.0",
    "@fastify/static": "^7.0.0",
    "@harbourmaster/shared": "file:../../packages/shared",
    "bcrypt": "^5.1.1",
    "commander": "^12.0.0",
    "dockerode": "^4.0.2",
    "fast-jwt": "^3.3.2",
    "fastify": "^4.26.0",
    "pino": "^8.17.2",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/dockerode": "^3.3.23",
    "@types/node": "^20.11.0",
    "@vitest/coverage-v8": "^1.6.1",
    "@vitest/ui": "^1.6.1",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vitest": "^1.2.0"
  },
  "files": [
    "bin",
    "dist"
  ]
}
